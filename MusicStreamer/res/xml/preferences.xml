<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:key="update"
		android:title="@string/pref_update_title"
		android:summary="@string/pref_update_summary"
		android:entries="@array/list_update"
		android:entryValues="@array/list_update_values"
		android:defaultValue="Daily"
		/>

	<PreferenceCategory
		android:title="@string/pref_general_settings_category">

		<CheckBoxPreference
			android:key="autosave"
			android:title="@string/pref_autosave_title"
			android:summary="@string/pref_autosave_summary"
			android:defaultValue="true"
			/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/pref_playback_category">

		<CheckBoxPreference
			android:key="progressivedownload"
			android:title="@string/pref_progressivedownload_title"
			android:summary="@string/pref_progressivedownload_summary"
			android:defaultValue="false"
			/>

		<CheckBoxPreference
			android:key="wakelock"
			android:title="@string/pref_wakelock_title"
			android:summary="@string/pref_wakelock_summary"
			android:defaultValue="true"
			/>
			
		<CheckBoxPreference
			android:key="wifilock"
			android:title="@string/pref_wifilock_title"
			android:summary="@string/pref_wifilock_summary"
			android:defaultValue="true"
			/>

		<CheckBoxPreference
			android:key="retrievemetadata"
			android:title="@string/pref_retrievemetadata_title"
			android:summary="@string/pref_retrievemetadata_summary"
			android:defaultValue="false"
			/>

		<CheckBoxPreference
			android:key="retrieveshoutcastmetadata"
			android:title="@string/pref_retrieveshoutcastmetadata_title"
			android:summary="@string/pref_retrieveshoutcastmetadata_summary"
			android:defaultValue="false"
			/>
		
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/pref_social_media_category">
		
	    <CheckBoxPreference
			android:key="sendscrobblerinfo"
			android:title="@string/pref_sendscrobblerinfo_title"
			android:summary="@string/pref_sendscrobblerinfo_summary"
			android:defaultValue="false"
			/>
	    
	</PreferenceCategory>
	
</PreferenceScreen>
